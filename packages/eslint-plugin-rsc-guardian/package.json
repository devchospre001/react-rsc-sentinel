  "keywords": [
    "eslint",
    "eslint-plugin",
    "react",
    "server-components",
    "rsc"
  ],
  "peerDependencies": {
    "eslint": ">=8.0.0"
  },
  "dependencies": {
    "@typescript-eslint/types": "^6.13.0",
    "@typescript-eslint/utils": "^6.13.0"
  },
  "devDependencies": {
    "@types/eslint": "^8.56.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@typescript-eslint/rule-tester": "^6.13.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  }
