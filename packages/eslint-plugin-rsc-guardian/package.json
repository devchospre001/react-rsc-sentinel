{
  "name": "eslint-plugin-rsc-guardian",
  "version": "1.0.0",
  "description": "ESLint plugin to detect illegal React Server Component usage",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
